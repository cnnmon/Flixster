<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    style="@style/Widget.AppCompat.RatingBar.Small"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292828"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvVoteCount"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBackdrop"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/rbVoteAverage"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#9EFFFFFF"
        tools:text="000" />

    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBackdrop"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:textColor="#9EFFFFFF"
        tools:text="000" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Fight Club" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbVoteAverage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#9EFFFFFF"
        tools:text='A ticking-time-bomb insomniac and a slippery soap salesman channel primal male aggression into a shocking new form of therapy. Their concept catches on, with underground "fight clubs" forming in every town, until an eccentric gets in the way and ignites an out-of-control spiral toward oblivion.' />

    <RatingBar
        android:id="@+id/rbVoteAverage"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBackdrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:numStars="5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#FFEB3B"
        android:scaleX="1"
        android:scaleY="1"
        android:stepSize="0.5" />

    <ImageView
        android:id="@+id/ivBackdrop"
        android:layout_width="wrap_content"
        android:layout_height="193dp"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:tint="#5C292828"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/ivBackdrop"
        android:layout_alignTop="@+id/ivBackdrop"
        android:layout_alignEnd="@+id/ivBackdrop"
        android:layout_alignBottom="@+id/ivBackdrop"
        android:padding="50dp"
        app:srcCompat="@android:drawable/ic_media_play" />
</RelativeLayout>